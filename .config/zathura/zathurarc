# Zathura config file


# Open with width auto adjustment
set adjust-open "width"

# Adjust zoom step
set zoom-step 5

# Page wrapping
set scroll-wrap "false"

map = zoom in

set window-title-basename "true"
set selection-clipboard "clipboard"

# Color settings
set recolor true
set recolor-darkcolor  "#200e09"
set recolor-lightcolor  "#f6f3d0"

set font "ubuntu mono 15"
set default-bg "#f6f3d0"
set default-fg "#200e09"

set inputbar-bg "#d2b283"
set inputbar-fg "#200e09"

set statusbar-bg "#d2b283"
set statusbar-fg "#200e09"

set completion-bg "#f6f2c4"
set completion-fg "#200e09"

set completion-group-bg "#d2b283"
set completion-group-fg "#200e09"

set completion-highlight-bg "#3e4837"
set completion-highlight-fg "#f6f3d0"
